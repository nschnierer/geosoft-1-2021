{
  "name": "geosoft-1-2021",
  "version": "1.0.0",
  "description": "Geosoftware I SS 2021",
  "author": "Noel Schnierer <noel.schnierer@wwu.de>",
  "license": "UNLICENSED",
  "scripts": {
    "test": "jest src",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src/**/*.js",
    "start": "npm-run-all --parallel build:watch webserver",
    "webserver": "live-server dist/",
    "build:prepare": "rm -rf dist && mkdir dist && cp -r public/* dist/",
    "build:esbuild": "esbuild src/index.js --outfile=dist/static/bundle.js --bundle --sourcemap --target=chrome58,firefox57,safari11,edge18",
    "build:watch": "npm run build:prepare && npm run build:esbuild -- --watch",
    "build": "npm run build:prepare && npm run build:esbuild -- --minify",
    "format": "prettier --write '**/*.md' '**/*.json' '**/*.js' '**/*.css'"
  },
  "devDependencies": {
    "esbuild": "^0.11.12",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.24.0",
    "jest": "^26.6.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "modern-normalize": "^1.0.0"
  },
  "jest": {
    "rootDir": "src",
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "esbuild-jest"
    }
  }
}
